<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_grey_home"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="12dp"
    android:paddingTop="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">


        <com.attinad.applicationconfigurator.customwidgets.CustomTextView
            android:id="@+id/itemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@+id/btnMore"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <com.attinad.applicationconfigurator.customwidgets.CustomButton
            android:id="@+id/btnMore"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/itemTitle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@color/colorPrimary"
            android:fontFamily="sans-serif-condensed"
            android:text="MORE"
            android:textColor="#FFF"
            android:textColorHighlight="@color/teal_100" />


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_list"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" />


</LinearLayout>

