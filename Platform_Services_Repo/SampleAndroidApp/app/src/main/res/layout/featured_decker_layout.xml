<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/thumbnail_landscape_width"
    android:layout_height="@dimen/thumbnail_featured_landscape_height"
    android:id="@+id/container"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/firstContainer"
        android:orientation="horizontal"
        app:cardCornerRadius="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/itemImage1"
                android:layout_width="@dimen/thumbnail_landscape_width"
                android:layout_height="@dimen/thumbnail_decker_landscape_height"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/android"
                android:transitionName="testing" />


            <com.attinad.applicationconfigurator.customwidgets.CustomTextView
                android:id="@+id/tvTitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/itemImage1"
                android:gravity="center"
                android:padding="1dp"
                android:textColor="@android:color/black"
                android:textSize="13sp" />


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/secondContainer"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        app:cardCornerRadius="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/itemImage2"
                android:layout_width="@dimen/thumbnail_landscape_width"
                android:layout_height="@dimen/thumbnail_decker_landscape_height"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/android"
                android:transitionName="testing" />


            <com.attinad.applicationconfigurator.customwidgets.CustomTextView
                android:id="@+id/tvTitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/itemImage2"
                android:gravity="center"
                android:padding="1dp"
                android:textColor="@android:color/black"
                android:textSize="13sp" />


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>